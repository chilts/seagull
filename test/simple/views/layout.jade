doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible",content="IE=edge")
    meta(name="viewport",content="width=device-width, initial-scale=1")
    meta(name="description",content="The easy way to create a lovely blog")
    meta(name="author",content="daffy.io")
    link(rel="icon",href="/favicon.ico",type="image/x-icon")

    title= title

    link(rel="stylesheet",href="https://cdn.jsdelivr.net/bootstrap/3.3.4/css/bootstrap#{cfg.min}.css")
    link(rel="stylesheet",href="/s/css/style#{cfg.min}.css")

    //[if lt IE 9]
      script(src="https://cdn.jsdelivr.net/html5shiv/3.7.2/html5shiv#{cfg.min}.js")
      script(src="https://cdn.jsdelivr.net/respond/1.4.2/respond.min.js")
      ![endif]
  body
    nav.navbar.navbar-inverse.navbar-fixed-top
      div.container
        div.navbar-header
          button.navbar-toggle.collapsed(type="button",data-toggle="collapse",data-target="#navbar",aria-expanded="false",aria-controls="navbar")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="/") daffy.io
        div#navbar.navbar-collapse.collapse
          form.navbar-form.navbar-right
            div.form-group
              input.form-control(type="text",placeholder="Email")
            div.form-group
              input.form-control(type="password",placeholder="Password")
            button.btn.btn-success(type="submit") Sign In

    h1= thisPage.title
    block content

    div.container
      hr
      footer
        p
          | &copy; loopdog.co 2014-#{(new Date()).getFullYear()}

    script(src="https://cdn.jsdelivr.net/jquery/1.11.3/jquery#{cfg.min}.js")
    script(src="https://cdn.jsdelivr.net/bootstrap/3.3.4/js/bootstrap#{cfg.min}.js")
    script(src="/s/js/jquery.refresh#{cfg.min}.js")
    script(src="/s/js/ready#{cfg.min}.js")
